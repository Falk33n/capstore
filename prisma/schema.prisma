// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlserver"
    url      = env("SECRET_DATABASE_URL")
}

// Model for the User table
model User {
    id              String      @unique    @id 
    firstName       String
    lastName        String
    email           String      @unique
    role            UserRole?
    password        UserPassword?
    address         UserAddress?
    logs            UserLog[]
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
}

// Model for the Password table
model UserPassword {
    id              String      @unique    @id 
    salt            String
    hashedPassword  String
    user            User        @relation(fields: [userId], references: [id])
    userId          String      @unique
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
}

// Model for the Address table
model UserAddress {
    id              String      @unique    @id 
    country         String
    city            String
    postalCode      String
    address         String 
    user            User        @relation(fields: [userId], references: [id])
    userId          String      @unique
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
}

// Model for the role table
model UserRole {
    id              String      @unique    @id 
    admin           Boolean     @default(false)
    superAdmin      Boolean     @default(false) 
    user            User        @relation(fields: [userId], references: [id])
    userId          String      @unique
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
}

// Model for the UserLog table
model UserLog {
    id              String      @unique    @id 
    action          String
    user            User        @relation(fields: [userId], references: [id])
    userId          String      @unique
    createdAt       DateTime    @default(now())
}
